
<form action="/noticia/create" method="POST">

    <%if (validacao.length > 0){%>
        <ul class="validation">
            <%for(let i=0; i < validacao.length; i++){%>
                <li class="validation__item"><%=validacao[i].msg %></li>
            <%}%>
        </ul>
    <%}%>

    <input type="text" name="titulo" id="titulo" placeholder="Titulo" value="<%=campos.titulo%>" />                
    <input type="text" name="resumo" id="resumo" placeholder="Resumo" value="<%=campos.resumo%>" />
    <input type="text" name="autor" id="autor" placeholder="Autor" value="<%=campos.autor%>" />
    <input type="date" name="dataNoticia" id="dataNoticia" value="<%=campos.dataNoticia%>" />
    <textarea name="noticia" id="noticia" placeholder="Escreva sua notÃ­cia aqui..." > <%=campos.noticia%> </textarea>
    
    <div class="container-button">
        <input class="button submit" type="submit" value="Enviar">
    </div>
</form>